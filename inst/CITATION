citHeader("To cite trinomix in publications use:")

year <- sub("-.*", "", meta$Date)
note <- sprintf("R package version %s", meta$Version)

bibentry(bibtype = "Manual",
         title = "{trinomix}: Trinomial mixture models for compostional data with zeros and ones",
         author = c(person("Eric J.", "Ward"),
                    person("Alexander J.", "Jensen"),
                    person("Ryan P.", "Kelly"),
                    person("Andrew O.", "Shelton"),
                    person("William H.", "Satterthwaite")
                    ),
         year = year,
         note = note,
         url = "https://github.com/ericward-noaa/bycatch")

